<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 实验所需权限（存储权限用于导出功能） -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="28"/>

    <application

        android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

    <!-- 笔记列表页（启动页，符合实验“NoteList界面”要求） -->
    <activity
        android:name=".NotesList"
        android:label="@string/app_name"
        android:exported="true"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar">  <!-- 新增 -->
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>
    </activity>

    <activity
        android:name=".NoteEditor"
        android:label="@string/edit_note_title"
        android:theme="@style/NoteEditorTheme"
        android:exported="false"
        />

    <!-- 内容提供者（适配数据库功能，支撑时间戳、查询等核心功能） -->
        <provider

            android:name=".NotePadProvider"
            android:authorities="com.example.android.notepad.NotePadProvider"
            android:exported="false"/>

</application>
    </manifest>