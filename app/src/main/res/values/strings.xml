    <string name="app_name">NotePad记事本</string>
    <string name="menu_save">保存</string>
    <string name="menu_delete">删除</string>
    <string name="hint_note_title">输入标题</string>
    <string name="hint_note_content">输入内容</string>
    <string name="button_ok">确定</string>

    <!-- 修复菜单文件缺失字符串 -->
    <string name="menu_revert">撤销</string>
    <string name="menu_open">打开</string>
    <string name="menu_copy">复制</string>
    <string name="menu_add">添加笔记</string>
    <string name="menu_paste">粘贴</string>
    <!-- 修复：动态文件夹名称（仅兼容编译，非文档核心） -->
    <string name="live_folder_name">笔记文件夹</string>
    <string name="edit_note_title">编辑笔记</string>
    <string name="hint_search_note">输入标题或内容搜索笔记...</string>
    <!-- 自定义主题 -->
    <style name="NotePadTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/amber_500</item>
        <item name="android:windowBackground">@color/gray_f5</item>
    </style>

    <!-- 编辑器主题 -->
    <style name="NoteEditorTheme" parent="NotePadTheme">
        <item name="android:editTextStyle">@style/CustomEditText</item>
    </style>

    <!-- 自定义输入框样式 -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_bg_round</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

